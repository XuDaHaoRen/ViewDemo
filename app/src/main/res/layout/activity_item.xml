<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ItemView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <activity.xbl.com.viewdemo.ItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_view1"
        />


    <activity.xbl.com.viewdemo.ItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_view2"
        />


    <activity.xbl.com.viewdemo.ItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_view3"
        />
    <activity.xbl.com.viewdemo.ItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_view4"
        ItemView:left_text="我是自定义属性左"
        ItemView:right_text="我是自定义属性右"
        ItemView:show_arrow="true"
        />



</LinearLayout>